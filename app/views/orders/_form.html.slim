= simple_form_for :order, action: 'create', url: '/orders', remote: true,
  html:{class: 'form order_form', 'data-type' => 'JSON'} do |f|
  .inputs
    = f.input :username, label: false, placeholder: 'имя'
    = f.input :phone, label: false, placeholder: 'телефон'
    = f.input :text, as: :text, label: false, placeholder: 'сообщение', required: false
  .actions
    = f.submit 'Отправить'